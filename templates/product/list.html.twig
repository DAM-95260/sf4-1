
{% extends "base.html.twig" %}

{# on ecrase le bloc title #}
{% block title %}
    Liste des produits
{% endblock %}

{# on ecrase le bloc body #}
{% block body %}

    <h1>Listes des produits</h1>

    <a href="{{ path('product_add') }}" class="btn btn-success btn-block">
        Nouveau produit
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantit√©</th>
            </tr>
        </thead>
    </table>
    <body>
    {% for product in product_list %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.description }}</td>
            <td>{{ product.price|number_format(2, '.', ' ') }}</td>
            <td>{{ product.quantity }}</td>
            <td>
                <a href="{{ ('product_edit', {id: product.id}) }}" class="btn btn-primary">
                    Modifier
                </a>
                <a href="#" class="btn btn-danger">Suprimer</a>
            </td>
        </tr>
    {% endfor %}

    {% endfor %}
    </body>

{% endblock %}